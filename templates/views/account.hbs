<!DOCTYPE html>

<html>

    <head>
        <title>Account</title>
        {{>head}}
    </head>

    <body>

        <!--Navigation-->
        <div>
        <a href="/logout">Logout</a>
        <a href="/home">Home</a>
        {{#ifCond user.admin ">=" 1}} 
        <a href="/app">Create App</a>
        {{/ifCond}}
        </div>

        <!--Info-->
        <div>
            <p>Name: {{user.name}} </p>
            <p>Nick: </p>
            {{>updateNick}}
            <p>Email: {{user.email}}</p>
            <p>Biography:</p>
            {{>updateBio}}
            <img src="{{user.profilePic}}" />
            {{>updateProfilePic}}
            <a id="updateredirect" href="/user/{{user.nick}}">See public profile</a>
        </div>
        
        <!--Sessions-->
        <div>
        {{>fetchSessions}}
        </div>
        
        <!--Your Apps-->
        <div>
        {{>fetchApps}}   
        </div>

        <!--Your Saved Apps-->
        <div>
        {{>fetchAppsSaved}}   
        </div>
        


    </body>

</html>