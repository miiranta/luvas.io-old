<!--FETCH APP INFO-->

    <!--App info-->
    <div>

        <div>
            <p>{{post.name}}</p>
        </div>

        <div>
            <p>{{post.title}}</p>
        </div>

        <div>
            <img src="{{post.picture}}"/>
        </div>

        <div>
            <p>Description</p>
            <div id="desc"></div>
            <div id="descRaw" style='display:none'>{{post.description}}</div>
        </div>
        
        <div>
            <p>Created by</p>
            <p>{{profile.nick}}</p>
        </div>

        <div>
            <p>Authentication required?</p>
            <p>{{post.auth}}</p>
        </div>

        <div>
            <p>Public?</p>
            <p>{{post.public}}</p>
        </div>

        <div>
            <p>Local?</p>
            <p>{{post.local}}</p>
        </div>

    </div>

    {{#ifCond user._id "==" post.owner}} 
    <!--Edit Link-->
    <div>
        <a href="/edit/{{post.name}}">Edit your app</a>
    </div>
    {{/ifCond}}

    <!--Edit Link-->
    <script src="\js/app/fetchAppInfo.js"></script>