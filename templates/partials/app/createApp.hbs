<!--CREATE APP-->

    <!--App data-->
    <div>
        <form id="appCrForm">

                <div>
                    <label id="appCrStatus"></label>
                </div>

                <div>
                    <input id="appCrTitle" type="text" placeholder="Title">
                </div>

                <div>
                â€‹   <div id="appCrDescription"></div>
                </div>

                <div>
                    <input id="appCrName" type="text" placeholder="App name">
                </div>

                {{#ifCond user.admin ">=" 2}}
                <div>
                    <p>Local? (Admin Only)</p>
                    <input id="appCrLocal" type="checkbox" placeholder="Public?">
                </div>
                {{/ifCond}}

                <div>
                    <input id="appCrUrl" type="text" placeholder="App URL">
                </div>

                <div>
                    <p>Public?</p>
                    <input id="appCrPublic" type="checkbox" placeholder="Public?">
                </div>

                {{#ifCond user.admin ">=" 2}}
                <div>
                    <p>Auth required? (Admin Only)</p>
                    <input id="appCrAuth" type="checkbox" placeholder="Public?">
                </div>
                {{/ifCond}}

                {{#ifCond user.admin ">=" 2}}
                <div>
                    <p>Admin Level required? (Admin Only)</p>
                    <input id="appCrAdminlevel" type="number" min="0" max="2" value="0">
                </div>
                {{/ifCond}}

                <div>
                    <button id="appCrSubmit" type="button">Create</button>
                </div>
                
        </form>
    </div>

    <!--Script-->
    <script src="js/app/createApp.js"></script>

 


